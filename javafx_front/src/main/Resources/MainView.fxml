<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gaizkaFrost.MainController">

    <!-- Header -->
    <top>
        <VBox spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 20;">
            <HBox alignment="CENTER_LEFT" minWidth="-Infinity" prefHeight="40.0" prefWidth="417.0" spacing="15">
                <TextField fx:id="claveField" prefWidth="400" promptText="Introduce la clave" style="-fx-font-size: 14px;">
                    <HBox.margin>
                        <Insets left="20" />
                    </HBox.margin>
                </TextField>

                <Region HBox.hgrow="ALWAYS" />

                <!-- Botones de acción -->
                <Button fx:id="cifrarBtn" onAction="#handleCifrar" prefHeight="74.0" prefWidth="110.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 30;" text="Cifrar">
                    <HBox.margin>
                        <Insets right="10.0" />
                    </HBox.margin>
                </Button>

                <Button fx:id="descifrarBtn" onAction="#handleDescifrar" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 30;" text="Descifrar">
                    <HBox.margin>
                        <Insets right="20" />
                    </HBox.margin>
                </Button>
            </HBox>

            <!-- ComboBox para seleccionar algoritmo -->
            <HBox alignment="CENTER_LEFT" prefHeight="5.0" prefWidth="860.0" spacing="10">
                <Label style="-fx-text-fill: white; -fx-font-size: 13px;" text="Algoritmo:">
                    <HBox.margin>
                        <Insets left="20" />
                    </HBox.margin>
                </Label>
                <ComboBox fx:id="algoritmoCombo" prefWidth="200" style="-fx-font-size: 13px;">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Vigenère" />
                            <String fx:value="AES" />
                        </FXCollections>
                    </items>
                </ComboBox>
            </HBox>
        </VBox>
    </top>

    <!-- Center - Áreas de texto -->
    <center>
        <HBox spacing="20" style="-fx-padding: 20;">
            <!-- Panel izquierdo - Texto de entrada -->
            <VBox spacing="10" HBox.hgrow="ALWAYS">
                <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Texto de entrada:" />

                <TextArea fx:id="textoEntradaArea" promptText="Escribe el texto aquí..." style="-fx-font-size: 13px; -fx-border-color: #bdc3c7; -fx-border-width: 2; -fx-border-radius: 5;" wrapText="true" VBox.vgrow="ALWAYS" />

                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Button onAction="#handleCargarArchivo" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 12px; -fx-padding: 8 20;" text="Cargar archivo" />
                    <Button onAction="#handleLimpiarEntrada" style="-fx-background-color: #7f8c8d; -fx-text-fill: white; -fx-font-size: 12px; -fx-padding: 8 20;" text="Limpiar" />
                </HBox>
            </VBox>

            <!-- Flecha central -->
            <VBox alignment="CENTER" prefWidth="80" spacing="10">
                <Label style="-fx-font-size: 48px; -fx-text-fill: #34495e;" text="➜" />
            </VBox>

            <!-- Panel derecho - Texto de salida -->
            <VBox spacing="10" HBox.hgrow="ALWAYS">
                <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Texto de salida:" />

                <TextArea fx:id="textoSalidaArea" editable="false" promptText="El resultado aparecerá aquí..." style="-fx-font-size: 13px; -fx-border-color: #bdc3c7; -fx-border-width: 2; -fx-border-radius: 5; -fx-background-color: #ecf0f1;" wrapText="true" VBox.vgrow="ALWAYS" />

                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Button onAction="#handleGuardarResultado" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 12px; -fx-padding: 8 20;" text="Guardar resultado" />
                    <Button onAction="#handleCopiar" style="-fx-background-color: #16a085; -fx-text-fill: white; -fx-font-size: 12px; -fx-padding: 8 20;" text="Copiar" />
                </HBox>
            </VBox>
        </HBox>
    </center>

    <!-- Footer - Barra de estado -->
    <bottom>
        <HBox alignment="CENTER_LEFT" style="-fx-background-color: #34495e; -fx-padding: 10 20;">
            <Label fx:id="statusLabel" style="-fx-text-fill: white; -fx-font-size: 12px;" text="Listo" />
        </HBox>
    </bottom>

</BorderPane>
